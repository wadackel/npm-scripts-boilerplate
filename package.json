{
  "name": "npm-scripts-boilerplate",
  "version": "0.0.1",
  "private": true,
  "description": "Application boilerplate using npm scripts",
  "scripts": {
    "start": "__TODO__",
    "build": "__TODO__",
    "watch": "__TODO__",
    "scss": "node-sass --output-style expanded -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/**/*.css",
    "cssnano": "postcss -u cssnano -r dist/css/**/*.css",
    "browserify": "browserify src/js/index.js -o dist/js/app.bundle.js -t [ babelify ]",
    "watchify": "watchify src/js/index.js -o dist/js/app.bundle.js -t [ babelify ] -v -d",
    "server": "browser-sync start --server 'dist' --files '**/*' --no-open",
    "test": "__TODO__",
    "lint": "eslint src/js",
    "mkdir": "mkdirp dist/css dist/js",
    "clear": "rimraf dist"
  },
  "repository": {
