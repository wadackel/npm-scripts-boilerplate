{
  "name": "npm-scripts-boilerplate",
  "version": "0.0.1",
  "private": true,
  "description": "Application boilerplate using npm scripts",
  "scripts": {
    "start": "parallelshell 'npm run server' 'npm run watch'",
    "build": "npm run clean && npm run mkdir && npm run copy && npm run lint && npm run build:html && npm run build:js && npm run build:css",
    "build:html": "npm run jade",
    "build:js": "npm run browserify && npm run uglify",
    "build:css": "npm run scss && npm run autoprefixer && npm run cssnano",
    "watch": "parallelshell 'npm run watch:html' 'npm run watch:js' 'npm run watch:css'",
    "watch:html": "npm run jade:watch",
    "watch:js": "npm run watchify",
    "watch:css": "watch 'npm run build:css' src/scss/",
    "test": "npm run lint && npm run test:js && npm run test:css",
    "test:js": "karma start",
    "test:css": "npm run staylestats",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/js",
    "lint:css": "sass-lint -v",
    "server": "browser-sync start --server 'dist' --files '**/*' --no-open",
    "jade": "jade src -o dist -O config.json -P",
    "jade:watch": "jade src -o dist -O config.json -P -w",
    "browserify": "browserify src/js/app.js -o dist/js/app.bundle.js -t [ babelify ]",
    "watchify": "watchify src/js/app.js -o dist/js/app.bundle.js -t [ babelify ] -v -d",
    "scss": "node-sass --output-style expanded -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/**/*.css",
    "cssnano": "postcss -u cssnano -r dist/css/**/*.css",
    "stylestats": "stylestats dist/css/",
    "uglify": "uglifyjs dist/js/app.bundle.js -o dist/js/app.bundle.js",
    "mkdir": "mkdirp dist/css dist/js logs",
    "clean": "rimraf dist",
    "copy": "ncp assets dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsuyoshiwada/npm-scripts-boilerplate.git"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/npm-scripts-boilerplate/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/npm-scripts-boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "cssnano": "^3.5.2",
    "eslint": "^2.1.0",
    "jade": "^1.11.0",
    "karma": "^0.13.21",
    "karma-browserify": "^5.0.1",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "phantomjs": "^2.1.3",
    "phantomjs-prebuilt": "^2.1.4",
    "postcss-cli": "^2.5.1",
    "power-assert": "^1.2.0",
    "rimraf": "^2.5.2",
    "sass-lint": "^1.5.0",
    "stylestats": "^6.3.0",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  }
}
