  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "cssnano": "^3.5.2",
    "eslint": "^2.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
